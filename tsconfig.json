{
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "esnext",
        "target": "esnext",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowImportingTsExtensions": true,
        "noEmit": true
    },
    "include": [
        "src/**/*"
    ]
}